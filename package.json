{
  "name": "orbitflash",
  "version": "1.0.0",
  "description": "OrbitFlash - Advanced MEV arbitrage system with cross-chain capabilities",
  "private": true,
  "workspaces": [
    "packages/*",
    "contracts"
  ],
  "scripts": {
    "build": "pnpm -r --workspace-concurrency=1 --stream build",
    "build:packages": "pnpm --filter './packages/*' build",
    "build:contracts": "pnpm --filter './contracts' build",
    "dev": "pnpm -r dev",
    "clean": "pnpm -r clean",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "type-check": "pnpm -r type-check"
  },
  "devDependencies": {
    "concurrently": "^8.0.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}